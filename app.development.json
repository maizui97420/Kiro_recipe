{
  "pages": [
    "pages/index/index",
    "pages/login/login",
    "pages/wishlist/wishlist",
    "pages/group/group",
    "pages/profile/profile"
  ],
  "window": {
    "backgroundTextStyle": "light",
    "navigationBarBackgroundColor": "#4CAF50",
    "navigationBarTitleText": "家庭餐食愿望清单 (开发版)",
    "navigationBarTextStyle": "white",
    "backgroundColor": "#f5f5f5",
    "enablePullDownRefresh": true,
    "onReachBottomDistance": 50
  },
  "tabBar": {
    "color": "#999999",
    "selectedColor": "#4CAF50",
    "backgroundColor": "#ffffff",
    "borderStyle": "black",
    "position": "bottom",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "首页",
        "iconPath": "images/home.png",
        "selectedIconPath": "images/home-active.png"
      },
      {
        "pagePath": "pages/wishlist/wishlist",
        "text": "愿望清单",
        "iconPath": "images/wishlist.png",
        "selectedIconPath": "images/wishlist-active.png"
      },
      {
        "pagePath": "pages/group/group",
        "text": "群组管理",
        "iconPath": "images/group.png",
        "selectedIconPath": "images/group-active.png"
      },
      {
        "pagePath": "pages/profile/profile",
        "text": "个人中心",
        "iconPath": "images/profile.png",
        "selectedIconPath": "images/profile-active.png"
      }
    ]
  },
  "networkTimeout": {
    "request": 15000,
    "downloadFile": 15000
  },
  "debug": true,
  "cloud": true,
  "permission": {
    "scope.userInfo": {
      "desc": "用于获取用户基本信息"
    }
  },
  "requiredBackgroundModes": [],
  "plugins": {},
  "preloadRule": {
    "pages/wishlist/wishlist": {
      "network": "all",
      "packages": ["__APP__"]
    }
  },
  "lazyCodeLoading": "requiredComponents",
  "sitemapLocation": "sitemap.json"
}